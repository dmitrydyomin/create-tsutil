{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "esnext",
    "lib": ["esnext"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["./src/**/*.spec.ts"],
  "ts-node": { "files": true }
}
